<Window x:Class="AmazonManifest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Amazon Manifest" Height="900" Width="1024">
    <Grid>
        <StackPanel>
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_Open" Click="OpenFile_Click"/>
                        <MenuItem Header="_Close"/>
                        <MenuItem Header="_Save"/>
                    </MenuItem>
                </Menu>

            </DockPanel>
            <StackPanel Orientation="Horizontal" Height="50" Margin="10,0">
                <Button Content="Browse File..." Width="76" Click="OpenFile_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            </StackPanel>
            <DataGrid Name="SpreadsheetView" Height="769" Margin="10,0" IsReadOnly="True">
                
            </DataGrid>

        </StackPanel>
    </Grid>
</Window>
